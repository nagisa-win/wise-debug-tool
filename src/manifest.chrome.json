{
  "manifest_version": 3,
  "name": "Wise Debug Tool (Chrome)",
  "action": {
    "default_title": "Wise Debug Tool",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["*://*.baidu.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.baidu.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Open popup"
    },
    "log_card": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Log cards on current Baidu page"
    }
  }
}
