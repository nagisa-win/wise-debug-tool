{
  "manifest_version": 2,
  "name": "Wise Debug Tool (Firefox)",
  "browser_action": {
    "default_title": "Wise Debug Tool",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "storage", "*://*.baidu.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.baidu.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Open popup"
    },
    "log_card": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "Log cards on current Baidu page"
    }
  }
}
